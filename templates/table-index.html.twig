{% extends "base.html.twig" %}

{% block title %} Configurer votre compte {% endblock %}

{% block main_content %}
    <div  class ="row">

        <h2>
            <br/>
            Changer votre mot de passe
        </h2>

        <div class="container">

            <br/>
            <br/>
            <form method='post' action="{{ path("settings_password_change") }}" >
                <div class="row">
                    <div class="col-lg-3">
                        Ancien mot de passe
                    </div>
                    <div class="col-lg-4">
                        <input type="password" name="old_password" class="form-control" />
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-lg-3">
                        Nouveau mot de passe
                    </div>
                    <div class="col-lg-4">
                        <input type="password" name="new_password" class="form-control" />
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-lg-3">
                        Rettapez le nouveau mot de passe
                    </div>
                    <div class="col-lg-4">
                        <input type="password" name="new_password_confirm" class="form-control" />
                    </div>
                </div>
                <br/>
                <div class="row">
                    
                    <div class="col-lg-7">
                        <center>
                            <button class="btn btn-lg btn-primary"> Valider </button>
                        </center>
                    </div>
                </div>
            </form>
        </div>

    </div>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>

{% endblock %}